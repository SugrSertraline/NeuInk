{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "paths": {
      "@neuink/shared": ["../shared/types/index.ts"]
    }
  },
  "include": ["src/**/*", "../shared/types/**/*"],
  "exclude": ["node_modules", "dist"]
}