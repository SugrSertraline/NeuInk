{
  "name": "neuink",
  "version": "0.1.0",
  "description": "NeuInk - 本地论文阅读与管理工具",
  "main": "electron/main.js",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:electron": "cd electron && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:electron": "cd electron && npm run build",
    "build": "node build-electron.js",
    "build:app": "node build-electron.js",
    "start": "cd electron && npm start"
  },
  "keywords": ["论文阅读", "桌面应用", "Electron", "Next.js"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
