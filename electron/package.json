{
  "name": "neuink-electron",
  "version": "0.1.0",
  "description": "NeuInk Electron主进程",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^27.0.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "http-proxy-middleware": "^2.0.7"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.neuink.app",
    "productName": "NeuInk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "api-proxy.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend"
      },
      {
        "from": "../backend/data",
        "to": "data"
      },
      {
        "from": "../frontend/out",
        "to": "frontend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
