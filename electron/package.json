{
  "name": "neuink-electron",
  "version": "0.1.0",
  "description": "NeuInk Electron主进程",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:all": "npm run build:frontend && npm run build:backend && npm run build",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "cd ../backend && npm run build",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^27.0.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "http-proxy-middleware": "^2.0.7"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.neuink.app",
    "productName": "NeuInk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "api-proxy.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/data",
        "to": "data",
        "filter": ["**/*"]
      },
      {
        "from": "../frontend/out",
        "to": "frontend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [{
        "target": "nsis",
        "arch": ["x64"]
      }],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}